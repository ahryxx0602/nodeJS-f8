<div class="mt-4">
    <form method="POST" action="/search">
        <div class="form-group">
            <label for="search-input">Nhập từ khóa</label>
            <input type="text" class="form-control" id="search-input" placeholder="Nhập từ khóa ..." name="q">
        </div>

        <div class="form-group">
            <label for="gender-input">giới tính</label>
            <select name="gender" id="gender-input" class="form-control">
                <option value="male">Nam</option>
                <option value="female">Nữ</option>
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Tìm kiếm</button>
    </form>
</div>